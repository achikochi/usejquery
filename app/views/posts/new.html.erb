<% title "New Blog Post" %>

<div id="blog_new_post">
  <% semantic_form_for @post do |f| %>
    <% f.inputs do %>
      <%= f.input :title %>
      <%= f.input :excerpt %>
      <%= f.input :content %>
      <%= f.input :categories, :as => :check_boxes %>
      <%= f.input :published %>
    <% end %>
    
    <%= f.buttons %>
  <% end %>
  
  <ul id="post_options">
    <li>
      <h3>Create new Category</h3>
      <% semantic_form_for @post_category do |f| %>
        <%= f.inputs %>
        <%= f.buttons %>
      <% end %>
    </li>
  </ul>
</div>